{
  "productName": "Skima",
  "version": "1.0.0",
  "identifier": "com.dlslabs.skima",
  "build": {
    "beforeDevCommand": "npm run dev:client",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build:client",
    "frontendDist": "../client/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Skima - Skills Management",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:11420; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/*"
    ],
    "externalBin": [
      "binaries/skima-server"
    ],
    "publisher": "DLSLabs",
    "windows": {
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {}
}
